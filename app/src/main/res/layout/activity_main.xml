<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4B3AE1"
        android:padding="20dp"
        android:text="Ngữ Pháp tiếng Anh"
        android:textColor="#111"
        android:textSize="25dp"

        >

    </TextView>


    <LinearLayout
        android:id="@+id/llnguphap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFF"
        android:elevation="5dp"
        android:onClick="onclickPlay"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/hinhanh" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:text="Học ngữ Pháp"
            android:textColor="#1B1919"
            android:textSize="15sp"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llbaitap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFF"
        android:elevation="5dp"
        android:onClick="onclickPlaykiemtra"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/baitap" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:text="Kiểm tra bài Tập"
            android:textColor="#090909"
            android:textSize="15sp"

            />


    </LinearLayout>





    <LinearLayout
        android:onClick="onclickPlaysetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFF"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@mipmap/caidat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:text="Cài Đặt"
            android:textColor="#090909"
            android:textSize="15sp"

            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFF"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/dangguat" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:text="Đăng xuất"
            android:textColor="#090909"
            android:textSize="15sp"

            />


    </LinearLayout>

</LinearLayout>