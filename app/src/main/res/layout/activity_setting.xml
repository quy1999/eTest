<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F85B1"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4B3AE1"
        android:padding="20dp"
        android:text="Cài đặt"
        android:textColor="#111"
        android:textSize="25dp"

        >

    </TextView>


    <LinearLayout
        android:id="@+id/llnguphap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFF"
        android:elevation="5dp"
        android:onClick="onclickPlay"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_settings_backup_restore_24" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:text="Chế  độ nền tối"
            android:textColor="#1B1919"
            android:textSize="15sp"

            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llbaitap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="#FFF"
        android:elevation="5dp"
        android:onClick="onclickPlaykiemtra"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_baseline_double_arrow_24" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:elevation="5dp"
            android:text="Đổi mật khẩu"
            android:textColor="#934229"
            android:textSize="15sp"

            />


    </LinearLayout>







</LinearLayout>